<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    tools:context=".ThingsActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/thingImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/thingName"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:background="@color/primary_light"
        android:scaleType="centerInside"
        app:lottie_rawRes="@raw/letter_a"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


    <TextView
        android:id="@+id/smallChar"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_above="@+id/catName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@color/primary_light"
        android:gravity="center"
        android:padding="15dp"
        android:text="varamwana: a "
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/catName"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_above="@+id/thingName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@color/primary_light"
        android:gravity="center"
        android:padding="15dp"
        android:text="mupanda: nzvanyira  "
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thingName"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/buttonAudioThing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@color/primary_light"
        android:gravity="center"
        android:padding="15dp"
        android:text="[aa]"
        android:textColor="@color/primary_text"
        android:textSize="40sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/buttonAudioThing"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:elevation="30dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_audio" />

    <ImageButton
        android:id="@+id/buttonRightThing"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/buttonshape"
        android:clipToPadding="false"
        android:elevation="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_rightarrow" />

    <ImageButton
        android:id="@+id/buttonLeftThing"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonshape"
        android:elevation="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_leftarrow" />

    <ImageView
        android:id="@+id/buttonQuiz"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_face_white" />

</RelativeLayout>